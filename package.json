{
  "name": "tree-sitter-templ",
  "version": "2.1.0",
  "description": "tree-sitter parser for templ files (https://templ.guide)",
  "main": "gramma.js",
  "types": "bindings/node",
  "author": "Vincent Rischmann",
  "license": "MIT",
  "dependencies": {
    "tree-sitter-go": "^0.23.1",
    "node-addon-api": "^8.1.0",
    "node-gyp-build": "^4.8.1"
  },
  "peerDependencies": {
    "tree-sitter": "^0.21.0"
  },
  "peerDependenciesMeta": {
    "tree_sitter": {
      "optional": true
    }
  },
  "devDependencies": {
    "tree-sitter-cli": "^0.24.2",
    "prebuildify": "^6.0.1"
  },
  "tree-sitter": [
    {
      "scope": "source.templ",
      "file-types": [
        "templ"
      ],
      "highlights": "queries/templ/highlights.scm",
      "injections": "queries/templ/injections.scm"
    }
  ],
  "scripts": {
    "install": "node-gyp-build",
    "prestart": "tree-sitter build --wasm",
    "start": "tree-sitter playground",
    "test": "node --test bindings/node/*_test.js",
    "prebuildify": "prebuildify --napi --strip"
  },
  "files": [
    "grammar.js",
    "binding.gyp",
    "prebuilds/**",
    "bindings/node/*",
    "queries/*",
    "src/**"
  ]
}
